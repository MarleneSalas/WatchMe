        <Border x:Name="HayResultados" Visibility="Collapsed" Grid.RowSpan="2" Grid.Column="1" CornerRadius="5" Padding="20,10,10,10"  Background="White" Height="250" Width="400" Margin="0,50,20,0" VerticalAlignment="Top" HorizontalAlignment="Right">
